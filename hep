#include <iostream>
using namespace std;

int main(){
    
    int a, b;
    char c; 
    cout<<"İki sayı ve yapmak istediğiniz işlemi giriniz"<< endl;
    cin >> a >> b >> c; 
    switch(c){
        case '+':
            cout<<a+b;
            
            break;
            
        case '-': 
            cout<<a-b;
            
            break;
            
        case '*': 
            cout<<a*b;
            
            break;
            
        case '/':
            cout<<a/b;
            
            break;
    }        
}
